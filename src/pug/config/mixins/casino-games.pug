mixin casinoGames(title, url, img)
    div(class="casino__container__card")
        div(class="casino__container__card__flex")
            div(class="casino__container__card__flex__text")
                h3(class="casino__container__card__flex__text__title")= title
                a(class="btn casino__container__card__flex__text__btn" href=`${url}`) PLAY NOW
            div(class="casino__container__card__flex__img"): img(src=`${img}`, alt="image")

-for (var i = 0; i < casinoGames.length; i++)
    -var d = casinoGames[i]
    +casinoGames(d.title, d.url, d.img)
