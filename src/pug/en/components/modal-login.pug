section(class="modal-login" id="modal-login")
    div(class="login") 
        a(href="#" class="login__close")
        div(class="login__content")
            div(class="login__content__header")
                h1(class="login__content__header__title") Log in
                a(class="login__content__header__text" href="en/registrarse.html") Signup
            form(name="LoginForm" action="javascript:void(0)" onsubmit="BackEndLogin(this); return false")
                div(class="login__content__form")
                    label(class="login__content__form__label" for="username") Username
                    input(class="login__content__form__input form-control" type="text" placeholder="Usuario o email" name="username" required)
                    label(class="login__content__form__label" for="password") Password
                    input(class="login__content__form__input form-control" type="password" placeholder="Contrase√±a" name="password" required)
                    div(class="text-center mt-2")
                        small(name="msj_error_lg" class="text-danger")
                    div(class="modal-login__forgot-pass")
                        a(href="https://betslip.moneybet.ag/home/reset-pass?lang=es") Forgot your Password?
                    div(class="login__content__form__checkbox")
                        input(type="checkbox" name="terminos" value="true")
                        p(class="login__content__form__text") Remember password
                    button(class="btn btn__registro" name="btn-login" type="submit") Log in
                    input(type="hidden" name="BackEndUrl" value="https://betslip.moneybet.ag")
        div(class="login__img")
            img(src="../assets/img/sign and register/fondo--formulario.jpg", alt="image login")
    script(src="https://images.betimages.com/Betslip/js/quick.login.min.js")
